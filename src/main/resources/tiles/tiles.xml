<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- Templates -->
	<definition name="base.layout" template="/WEB-INF/tiles/layout/base.jsp">
		<put-attribute name="title" value="Kiosk Management Web Portal" />
		<put-attribute name="custom-css" value="" />
		<put-attribute name="custom-js" value="" />
		<put-attribute name="header" value="/WEB-INF/tiles/layout/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/tiles/layout/footer.jsp" />
	</definition>
	
	<!-- Other Pages -->
	<definition name="login" extends="base.layout">
		<put-attribute name="body" value="/WEB-INF/tiles/view/login.jsp" />
	</definition>
	<definition name="welcome" extends="base.layout">
		<put-attribute name="body" value="/WEB-INF/tiles/view/welcome.jsp" />
	</definition>
	
	<!-- Error Pages -->
	<definition name="error" extends="base.layout">
		<put-attribute name="body" value="/WEB-INF/tiles/view/error-handler/general-error.jsp" />
	</definition>
	<definition name="access-denied" extends="base.layout">
		<put-attribute name="body" value="/WEB-INF/tiles/view/error-handler/access-denied.jsp" />
	</definition>
	
	<!-- User Pages -->
	<definition name="user.list" extends="base.layout">
		<put-attribute name="body" value="/WEB-INF/tiles/view/user-management/user-list.jsp" />
	</definition>
	<definition name="user.register" extends="base.layout">
		<put-attribute name="body" value="/WEB-INF/tiles/view/user-management/user-register.jsp" />
	</definition>
	<definition name="user.register.success" extends="base.layout">
		<put-attribute name="body" value="/WEB-INF/tiles/view/user-management/user-register-success.jsp" />
	</definition>
	
	<!-- Group Pages -->
	<definition name="group.list" extends="base.layout">
		<put-attribute name="body" value="/WEB-INF/tiles/view/group-management/group-list.jsp" />
	</definition>
	
</tiles-definitions>